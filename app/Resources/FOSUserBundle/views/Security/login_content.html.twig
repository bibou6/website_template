{% trans_default_domain 'FOSUserBundle' %}

{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<div class="container">
	<div class="text-center">
        <form action="{{ path("fos_user_security_check") }}" method="post" class="form-horizontal">
            {% if csrf_token %}
                <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
            {% endif %}
        	<div class="form-group">
                <label for="username" class="form-group">{{ 'security.login.username'|trans }}</label>
                <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" autocomplete="username" />
        	</div>
        	<div class="form-group">
            <label for="password" class="form-group">{{ 'security.login.password'|trans }}</label>
            <input type="password" id="password" name="_password" required="required" autocomplete="current-password" />
        	</div>
        	<div class="form-group">
            <input type="checkbox" id="remember_me" name="_remember_me" value="on" class="form-group"/>
            <label for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
            </div>
        	<div>
            	<input class="btn btn-primary" type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" />
            </div>
        </form>
    </div>
</div>
